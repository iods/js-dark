# @see https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 80
tab_width = 4
trim_trailing_whitespace = true

[**.{css,html,vim,rb,Rakefile,scss}]
indent_size = 2
indent_style = space

[{Dockerfile,Dockerfile.template.erb,Dockerfile-alpine}]
indent_style = space
indent_size = 4

[*.env]
insert_final_newline = false
trim_trailing_whitespace = false

[{*.ini,.editorconfig}]
indent_size = 4

# https://google.github.io/styleguide/jsguide.html
[*.{cjs,js,json,jsx,mjs,ts,tsx}]
indent_size = 2

[*.json]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

[*.{md,mdown,markdown,txt}]
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false

[*.{xml,xml.dist,xsd}]
max_line_length = off
indent_size = 2

[*.{yml,yaml}]
indent_size = 2